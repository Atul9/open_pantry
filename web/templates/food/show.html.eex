  <li>
    <strong>Carbohydrate:</strong>
    <%= @food.carbohydrate %>
  </li>

  <li>
    <strong>Sugars:</strong>
    <%= @food.sugars %>
  </li>

  <li>
    <strong>Fat:</strong>
    <%= @food.fat %>
  </li>

  <li>
    <strong>Saturated fat:</strong>
    <%= @food.saturated_fat %>
  </li>

  <li>
    <strong>Protein:</strong>
    <%= @food.protein %>
  </li>

  <li>
    <strong>Fiber:</strong>
    <%= @food.fiber %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @food.description %>
