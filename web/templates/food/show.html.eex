<h2>Show food</h2>

<ul>

  <li>
    <strong>Name:</strong>
    <%= @food.name %>
  </li>

  <li>
    <strong>Serving size:</strong>
    <%= @food.serving_size %>
  </li>

  <li>
    <strong>Calories:</strong>
    <%= @food.calories %>
  </li>

  <li>
    <strong>Calories from fat:</strong>
